#include<stdio.h>
#include<iostream>
#include<string>
using namespace std;
void sum(int a[],int n)
{
    cout << "Các phần tử của mảng:"<<endl;
    for(int i=0;i<n;i++)
    {
        cout<<a[i]<<" ";
    }
        int sum=0;
        for (int i=0; i<n;i++)
        {
            sum= sum + a[i];
        }
        cout<<"\ntổng các phần tử là:"<<sum<<endl;
        
}

int main()
{
    int a[100];
    int n;
    cout<<"Nhập số phần tử của mảng:";
    cin>>n;
    for(int i=0;i<n;i++)
    {
        cin>>a[i];
    }
    sum (a,n) ;
    return 0;
   
    
}
